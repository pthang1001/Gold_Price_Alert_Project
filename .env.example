# =========== BACKEND ===========
NODE_ENV=development
PORT=5000
API_VERSION=v1

# =========== DATABASE ===========
# MySQL connection
DB_HOST=mysql
DB_PORT=3306
DB_NAME=Gold_Price_Alert_Project
DB_USER=root
DB_PASSWORD=123456

# Auth Database
AUTH_DB_NAME=auth_db
USER_DB_NAME=user_db
PRICE_DB_NAME=price_db
ALERT_DB_NAME=alert_db
EMAIL_DB_NAME=email_db
NOTIFICATION_DB_NAME=notification_db
ADMIN_DB_NAME=admin_db
LOGGING_DB_NAME=logging_db

# =========== REDIS ===========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =========== JWT AUTHENTICATION ===========
JWT_SECRET=change_this_very_long_random_secret_in_production_at_least_32_chars
JWT_REFRESH_SECRET=different_refresh_secret_also_long_and_random_32_chars_min
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
JWT_ALGORITHM=HS256

# =========== OTP CONFIGURATION ===========
OTP_EXPIRY=5m
OTP_LENGTH=6

# =========== SMTP (Email) ===========
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_specific_password_not_account_password
SMTP_FROM=noreply@goldprice.app

# Email config
MAX_EMAIL_RETRY=3
EMAIL_RETRY_DELAY=5m

# =========== EXTERNAL APIs ===========
GOLD_PRICE_API_URL=https://imeta.priceapi.com/gold
GOLD_PRICE_API_KEY=your_gold_price_api_key
GOLD_PRICE_UPDATE_FREQUENCY=15
PRICE_CACHE_TTL=5

# =========== FRONTEND ===========
REACT_APP_API_URL=http://localhost:5000/api/v1
REACT_APP_SOCKET_URL=http://localhost:5000
REACT_APP_LOG_LEVEL=debug

# =========== LOGGING ===========
LOG_LEVEL=debug
LOG_DIR=logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# =========== ERROR TRACKING ===========
SENTRY_DSN=

# =========== CORS ===========
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =========== RATE LIMITING ===========
RATE_LIMIT_WINDOW=15min
RATE_LIMIT_MAX_REQUESTS=100

# =========== ADMIN ===========
ADMIN_EMAIL=admin@goldprice.app
ADMIN_PASSWORD=change_this_default_admin_password

# =========== BACKUP ===========
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
